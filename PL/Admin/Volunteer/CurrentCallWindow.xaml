<Window x:Class="PL.Volunteer.CurrentCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Current Call Details"
        Icon="../../Assets/icon.png"
        Height="530"
        Width="450">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Call ID:" />
            <TextBlock Text="{Binding CallId}" Margin="0,0,0,10" />

            <Label Content="Call Type:" />
            <TextBlock Text="{Binding CallType}" Margin="0,0,0,10" />

            <Label Content="Description:" />
            <TextBlock Text="{Binding GeneralDescription}" Margin="0,0,0,10" />

            <Label Content="Address:" />
            <TextBlock Text="{Binding Address}" Margin="0,0,0,10" />

            <Label Content="Start Time:" />
            <TextBlock Text="{Binding StartTime}" Margin="0,0,0,10" />

            <Label Content="Estimated Completion Time:" />
            <TextBlock Text="{Binding EstimatedCompletionTime}" Margin="0,0,0,10" />

            <Label Content="Assignment Start Time:" />
            <TextBlock Text="{Binding AssignmentStartTime}" Margin="0,0,0,10" />

            <Label Content="Distance:" />
            <TextBlock Text="{Binding Distance}" Margin="0,0,0,10" />

            <Label Content="Status:" />
            <TextBlock Text="{Binding Status}" Margin="0,0,0,10" />
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="PL.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" Height="800" Width="1200"
        Loaded="Window_Loaded" Icon="Assets/icon.png"
        Closed="Window_Closed"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Closing="Window_Closing">
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="Assets\Login item.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Email TextBox -->
        <TextBox HorizontalAlignment="Left" Margin="490,600,0,0" TextWrapping="Wrap" Text="Enter Name" VerticalAlignment="Top" Width="300" Height="40"
                 FontSize="16" FontWeight="Bold" Foreground="Blue"/>

        <!-- Password TextBox -->
        <TextBox HorizontalAlignment="Left" Margin="490,660,0,0" TextWrapping="Wrap" Text="Enter Password" VerticalAlignment="Top" Width="300" Height="40"
                 FontSize="16" FontWeight="Bold" Foreground="Blue"/>

        <!-- Login Button -->
        <Button Content="Login" HorizontalAlignment="Left" Margin="490,720,0,0" VerticalAlignment="Top" Height="40" Width="300"
                FontSize="18" FontWeight="Bold" Foreground="White" Background="Green"/>

    </Grid>
</Window>
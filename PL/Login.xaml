<Window x:Class="PL.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" Height="800" Width="1200"
        Loaded="Window_Loaded" Icon="Assets/icon.png"
        Closed="Window_Closed"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="538*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="579*"/>
            <ColumnDefinition Width="227*"/>
            <ColumnDefinition Width="394*"/>
        </Grid.ColumnDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="Assets\loginitem.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Admin and User Text -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,10,10,0" Grid.Column="2" Grid.Row="0" Height="32" Width="152">
            <TextBox Text="322766064, aaaaAAAA1111" 
                     FontSize="12" FontWeight="Bold" Foreground="Gray" 
                     Background="Transparent" BorderThickness="0" IsReadOnly="True" Width="207"/>
            <TextBox Text="200000016, bbbbBBBB2222" 
                     FontSize="12" FontWeight="Bold" Foreground="Gray" 
                     Background="Transparent" BorderThickness="0" IsReadOnly="True" Height="33" Width="199"/>
        </StackPanel>

        <!-- Label for ID -->
        <TextBlock Text="Enter ID" 
                   FontSize="18" FontWeight="Bold" Foreground="Black" 
                   Margin="28,0,0,10" VerticalAlignment="Bottom" Grid.Column="1" Height="20" Grid.RowSpan="2" />

        <!-- ID TextBox -->
        <TextBox Name="IdTextBox" 
                 FontSize="25" FontWeight="Bold" Foreground="Black"
                 GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" 
                 Grid.Column="1" Margin="28,28,0,1" Grid.RowSpan="2" Grid.Row="1"/>

        <!-- Label for Password -->
        <TextBlock Text="Enter Password" 
                   FontSize="18" FontWeight="Bold" Foreground="Black" 
                   Margin="28,0,0,0" VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" Height="21"/>

        <!-- Password PasswordBox -->
        <PasswordBox Name="PasswordTextBox" VerticalAlignment="Center" 
                     FontSize="25" FontWeight="Bold" Foreground="Black"
                     GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus" 
                     Grid.Column="1" Grid.Row="4" Margin="28,0,0,0" Height="50"/>

        <!-- Login Button -->
        <Button Content="Login" VerticalAlignment="Top" Height="50"
                FontSize="30" FontWeight="Bold" Foreground="White" Background="Green"
                Click="LoginButton_Click" Grid.Column="1" Grid.Row="5" Margin="28,5,0,0"/>
    </Grid>
</Window>

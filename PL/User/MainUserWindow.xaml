<Window x:Class="PL.MainUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main User Window" Height="600" Width="800">

    <!-- Déclaration des ressources -->
    <Window.Resources>
        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Background" Value="#FF4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF81C784" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF388E3C" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Contenu de la fenêtre -->
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Assets/background4.jpeg" Stretch="UniformToFill" />
        </Grid.Background>

        <Border Background="#AA000000" Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <GroupBox Header="User Details" Margin="10" Foreground="White" Background="#AA333333">
                    <StackPanel>
                        <Label Content="ID:" Foreground="White" />
                        <TextBlock Text="{Binding CurrentUser.Id}" Foreground="White" />

                        <Label Content="Name:" Foreground="White" />
                        <TextBlock Text="{Binding CurrentUser.Name}" Foreground="White" />

                        <Label Content="Email:" Foreground="White" />
                        <TextBlock Text="{Binding CurrentUser.Email}" Foreground="White" />

                        <Label Content="Phone:" Foreground="White" />
                        <TextBlock Text="{Binding CurrentUser.Phone}" Foreground="White" />
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Current Call Details" Margin="10" Foreground="White" Background="#AA333333">
                    <StackPanel>
                        <Label Content="Call ID:" Foreground="White" />
                        <TextBlock Text="{Binding CurrentCall.CallId}" Foreground="White" />

                        <Label Content="Type:" Foreground="White" />
                        <TextBlock Text="{Binding CurrentCall.CallType}" Foreground="White" />

                        <Label Content="Status:" Foreground="White" />
                        <TextBlock Text="{Binding CurrentCall.Status}" Foreground="White" />

                        <StackPanel Orientation="Horizontal" Margin="10">
                            <Button Content="Complete Call" Click="CompleteCall_Click" Style="{StaticResource StyledButton}" Margin="5" />
                            <Button Content="Cancel Call" Click="CancelCall_Click" Style="{StaticResource StyledButton}" Margin="5" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <Border Background="#AA333333" Margin="10" Padding="10">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="View History" Click="ViewHistory_Click" Style="{StaticResource StyledButton}" Margin="5" />
                        <Button Content="Choose Call" Click="ChooseCall_Click" Style="{StaticResource StyledButton}" Margin="5" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>

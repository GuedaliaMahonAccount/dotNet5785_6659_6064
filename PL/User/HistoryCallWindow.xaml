<Window x:Class="PL.User.HistoryCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.User"
        mc:Ignorable="d"
        Title="HistoryCallWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Volunteer Info Section -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" HorizontalAlignment="Left" Width="310">
            <TextBlock Text="ID:" FontWeight="Bold" FontSize="16" Foreground="Black" VerticalAlignment="Center" Margin="0,0,5,0" />
            <TextBlock x:Name="VolunteerIdTextBlock" FontSize="16" FontWeight="Bold" Foreground="Black" VerticalAlignment="Center" Margin="0,0,15,0" />
            <TextBlock Text="Name:" FontWeight="Bold" FontSize="16" Foreground="Black" VerticalAlignment="Center" Margin="0,0,5,0" />
            <TextBlock x:Name="VolunteerNameTextBlock" FontSize="16" FontWeight="Bold" Foreground="Black" VerticalAlignment="Center" />
        </StackPanel>


        <!-- Filters Section -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,10,0,0" HorizontalAlignment="Center">
            <Button Width="150" Height="35" Content="Filter" Click="FilterButton_Click" />
        </StackPanel>

        <!-- DataGrid Section -->
        <DataGrid x:Name="CallsDataGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Call ID" Binding="{Binding CallId}" />
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
